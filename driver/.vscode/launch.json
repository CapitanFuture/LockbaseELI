{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Attach",
			"type": "cppdbg",
			"request": "attach",
			"program": "${workspaceFolder}/build/LbELI_cli.exe",
			"processId": "${command:pickProcess}",
			"MIMode": "gdb",
			"miDebuggerPath": "C:/tools/mingw32/bin/gdb.exe",
			"setupCommands": [
				{
					"description": "Automatische Strukturierung und Einrückung für \"gdb\" aktivieren",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		},
		{
			"type": "lldb",
			"request": "attach",
			"name": "Attach via lldb",
			"program": "${workspaceFolder}//build/LbELI_cli"
		},
		{
			"name": "LLDB Extension",
			"type": "lldb",
			"request": "custom",
			"targetCreateCommands": [
				"target create ${workspaceFolder}//build/LbELI_cli"
			],
			"processCreateCommands": [
				"settings set target.run-args value1 value2 value3",
				"process launch"
			],
			"preLaunchTask": "build"
		},
		{
			"name": "C/C++ Extension",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/LbELI_cli",
			"args": [],
			"stopAtEntry": true,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": true,
			"MIMode":"gdb",
			"miDebuggerPath": "C:/tools/mingw32/bin/gdb.exe"
		}
	]
}