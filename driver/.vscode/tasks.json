{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "clean",
        "type": "shell",
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
        "command": "cmake",
        "args": [
          "--build",
          ".",
          "--target",
          "clean"
        ],
        "problemMatcher": [
          "$msCompile"
        ]
      },
      {
        "label": "cmake",
        "type": "shell",
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
        "command": "cmake",
        "args": [
          "-G",
          "'Unix Makefiles'",
          "-DPAHO_WITH_SSL=FALSE",
          "-DPAHO_BUILD_DOCUMENTATION=FALSE",
          "-DPAHO_BUILD_SAMPLES=FALSE",
          "-DCMAKE_VERBOSE_MAKEFILE=TRUE",
          ".."
        ]
      },
      {
        "label": "build",
        "type": "shell",
        "options": {
          "cwd": "${workspaceRoot}/build"
        },
        "command": "cmake",
        "args": [
          "--build",
          "."
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "dependsOn": [
          "cmake"
        ]
      }
    ]
  }